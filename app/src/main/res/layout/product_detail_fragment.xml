<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Product Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="28dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$20.00"
            android:textSize="18dp"
            android:gravity="end"
            android:layout_marginRight="32dp"
            android:textStyle="bold"
            android:textColor="#66BB6A"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="12dp"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 reviews"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/gray"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingLeft="28dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Here is the dummy test for the description of porduct ......"
        android:textSize="12sp"
        android:paddingLeft="28dp"
        android:textColor="@color/gray"
        android:paddingRight="28dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Quantity"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingLeft="28dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >


        <Button
            android:layout_marginLeft="28dp"
            android:textColor="@color/black"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="-"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/btnMinus"
            />

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:text="+"
            android:textSize="12dp"
            android:textStyle="bold"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <Button
            android:textSize="12dp"
            android:paddingLeft="12dp"
            android:drawableLeft="@drawable/ic_shopping_basket_black_24dp"
            android:layout_marginLeft="28dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Add to Cart"
            android:background="@drawable/button_cart"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="18dp"
            />
        <Button
            android:textAllCaps="false"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_favorite_black_24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="28dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Add to Wishlist"
            android:background="@drawable/button_wishlist"
            android:textColor="@color/black"
            android:layout_marginTop="18dp"
            />

    </LinearLayout>



</LinearLayout>